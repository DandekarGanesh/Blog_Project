<body>
     <nav> <i class="fa-solid fa-blog"></i> <a href="http://localhost:8080/blogging">  Bloggging page </a> 
       
        <% if(!isLogin) { %>
          <h3>  <form action="/blogging/login"> <button class="btn btn-success"> Signup/Login</button> </form> </h3> 
        <% }  else { %>
          <h3> <form method="POST" action="/blogging/logout"> <button class="btn btn-danger">Logout</button></form> </h3>
        <% } %>

    </nav>
     <hr>
     
     <h1> Publish you blog here !!  </h1>
     <h4>create a blog you wish !!</h4>
     <br> <br>

    <center>  
        <form action="http://localhost:8080/blogging/addblog">
            <button class="btn btn-warning"> Add a Blog</button>
        </form>
     </center> 
     <br> <hr> <br> 
     
     <div id="cardSec">
        <% for(us of user) { %>
            <% if(us.blog && us.blog !== "false") { %>
            <span id="span">
                <div class="card card1">
                    <h5 class="card-title"> <span style="color:red"> Blog </span>  : <%= us.blog  %>   </h5>
                    <p>ID: <span style="color: green"> <%= us._id %> </span></p>
               </div>
            </span>
            <% } %>
         <% } %>
     </div>
      

     <script src="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
